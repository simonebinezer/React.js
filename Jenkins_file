pipeline {
    agent any
    environment {
        SONAR_PROJECT_KEY = 'React.js'
        GITHUB_REPO = 'https://github.com/simonebinezer/React.js'
        SONAR_HOST_URL = 'http://18.237.49.246:9000'
        SONAR_TOKEN = credentials('Sonar_Token') // Ensure the credential ID is correct
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: "${GITHUB_REPO}"
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') { // Ensure 'SonarQube' matches the name of your SonarQube server in Jenkins
                    script {
                        // Using Jenkins-managed SonarScanner
                        def scannerHome = tool name: 'SonarQube_Scanner' // Ensure this matches the configured scanner name
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.login=${SONAR_TOKEN} \
                            -X
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}
