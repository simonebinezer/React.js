pipeline {
    agent any
    environment {
        SONAR_PROJECT_KEY = 'React.js'
        GITHUB_REPO = 'https://github.com/simonebinezer/React.js'
        SONAR_HOST_URL = 'http://18.237.49.246:9000'
        SONAR_TOKEN = credentials('Sonar_Token') // Replace with the ID of your SonarQube token
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: "${GITHUB_REPO}"
            }
        }
        stage('Copy File to Target') {
            steps {
                script {
                    def startTime = System.currentTimeMillis()
                    echo "Starting file transfer at: ${new Date(startTime)}"

                    sh '''
                    scp -i /var/jenkins_home/.ssh/id_rsa -o StrictHostKeyChecking=no README.md ec2-user@ec2-34-220-228-240.us-west-2.compute.amazonaws.com:/home/ec2-user/
                    '''

                    def endTime = System.currentTimeMillis()
                    echo "File transfer completed at: ${new Date(endTime)}"
                    echo "Total time taken: ${(endTime - startTime) / 1000} seconds"
                }
            }
}

    }
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}
